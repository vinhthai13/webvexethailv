extends ../layouts/user

block content
  .container.py-5
    .row.justify-content-center
      .col-md-5
        .card.shadow-lg.border-0.rounded-3
          .card-header.bg-primary.text-white.text-center.py-3.border-0.rounded-top-3
            h3.mb-0
              i.fas.fa-sign-in-alt.me-2
              | Đăng nhập
          
          .card-body.p-4
            if error
              .alert.alert-danger.alert-dismissible.fade.show.d-flex.align-items-center(role='alert')
                i.fas.fa-exclamation-circle.me-2.fs-5
                div= error
                button.btn-close(type='button' data-bs-dismiss='alert' aria-label='Close')

            form(method='POST' action='/login')
              .mb-3
                label.form-label.fw-medium(for='username') Tên đăng nhập
                .input-group
                  span.input-group-text.bg-light
                    i.fas.fa-user.text-primary
                  input.form-control.py-2#username(
                    type='text'
                    name='username'
                    required
                    autofocus
                    placeholder='Nhập tên đăng nhập'
                  )

              .mb-4
                label.form-label.fw-medium(for='password') Mật khẩu
                .input-group
                  span.input-group-text.bg-light
                    i.fas.fa-lock.text-primary
                  input.form-control.py-2#password(
                    type='password'
                    name='password'
                    required
                    placeholder='Nhập mật khẩu'
                  )

              button.btn.btn-primary.w-100.py-2.mb-3(type='submit')
                i.fas.fa-sign-in-alt.me-2
                | Đăng nhập

              .text-center
                p.mb-0 Chưa có tài khoản? 
                  a.text-decoration-none.