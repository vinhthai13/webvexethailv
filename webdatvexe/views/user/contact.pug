extends ../layouts/user

block head
  link(rel="stylesheet", href="/css/contact.css")

block content
  .container.py-5
    h1.text-center.mb-4.font-weight-bold.text-primary Liên hệ
    .row.justify-content-center
      .col-md-8
        .card.shadow-lg
          .card-body
            h5.card-title.mb-4.text-dark Thông tin liên hệ
            
            .mb-4
              h6.fw-bold.text-dark Địa chỉ
              p.mb-0.text-dark 123 Đường ABC, Quận XYZ, TP. Hồ Chí Minh
              iframe(src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3918.595335335395!2d106.66666666666667!3d10.766666666666666!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31752f2b3f8d45e3%3A0x6a85a9ca5c5c5c5c!2s123+ABC+St%2C+District+1%2C+Ho+Chi+Minh+City!5e0!3m2!1sen!2s!4v1643723909759!5m2!1sen!2s" width="100%" height="200" frameborder="0" style="border:0;" allowfullscreen)
            
            .mb-4
              h6.fw-bold.text-dark Điện thoại
              p.mb-0.text-dark
                a(href="tel:1900xxxx" class="text-primary") 1900 xxxx
            
            .mb-4
              h6.fw-bold.text-dark Email
              p.mb-0.text-dark
                a(href="mailto:contact@example.com" class="text-primary") contact@example.com
            
            .mb-4
              h6.fw-bold.text-dark Giờ làm việc
              p.mb-0.text-dark Thứ 2 - Chủ nhật: 7:00 - 22:00
            
            .mb-4
              h6.fw-bold.text-dark Địa chỉ liên hệ khác
              p.mb-0.text-dark
                a(href="https://www.facebook.com/example" class="text-primary") Facebook
                |  -
                a(href="https://www.instagram.com/example" class="text-primary") Instagram
                |  -
                a(href="https://www.twitter.com/example" class="text-primary") Twitter